bindkey '^]' peco-src
function peco-src() {
  local src=$(ghq list --full-path | peco --query "$LBUGGER")
  if [ -n "$src" ]; then
    BUFFER="cd $src"
    zle accept-line
  fi
  zle -R -c
}
zle -N peco-src

if [ -n "$VIMRUNTIME" ]; then
  PS1='(VIM) %m ğŸ˜ˆ %c %# '
else
  PS1='%m ğŸ˜ˆ %c %# '
fi
