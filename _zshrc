# alias command
alias ll='ls -la'
alias v='vim'
alias c='clear'
alias rb='rbenv'
alias brails='bundle exec rails'
alias t='tmux'

# original command.
function ruby_refe() {
  cat ~/ruby_refe.txt | fzf | xargs refe | bat -l ruby
  # å®Ÿè¡Œã™ã‚‹ã¨terminalã®ç‰¹æ®Šæ–‡å­—ãŒå¤‰æ›´ã•ã‚Œçµ‚äº†ã—ãŸã¨ãã«å…ƒã®è¨­å®šã«å¾©å…ƒã•ã‚Œãªã„ãŸã‚ä¸‹è¨˜å®Ÿè¡Œ.
  stty sane
